    <div class="tab-content">
        <!-- General Settings -->
        <div class="tab-pane active" id="tab-general">
            {{ partial_tab_general }}
        </div>

        <!-- API Settings -->
        <div class="tab-pane" id="tab-api">
            {{ partial_tab_api }}
