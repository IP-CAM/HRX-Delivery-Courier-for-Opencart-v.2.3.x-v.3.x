{% if total_pages > 0 %}
<ul class="pagination" data-mijora-paginator>
    {% if current_page > 1 %}
    <li>
        <a href="#" class="paginator-btn-previous" data-js-function="{{ js_function }}"  data-page="1">&lt;&lt;</a>
    </li>
    {% else %}
    <li class="disabled">
        <span>&lt;&lt;</span>
    </li>
    {% endif %}
    
    {% if current_page > 1 %}
    <li>
        <a href="#" class="paginator-btn-previous" data-js-function="{{ js_function }}"  data-page="{{ current_page - 1 }}">&lt;</a>
    </li>
    {% else %}
    <li class="disabled">
        <span>&lt;</span>
    </li>
    {% endif %}
    
    <li class="active">
        <span class="current_page">{{ current_page }}</span>
        <span>/</span>
        <span class="total_pages">{{ total_pages }}</span>
    </li>
    
    {% if current_page < total_pages %}
    <li>
        <a href="#" class="paginator-btn-next" data-js-function="{{ js_function }}" data-page="{{ current_page + 1 }}">&gt;</a>
    </li>
    {% else %}
    <li class="disabled">
        <span>&gt;</span>
    </li>
    {% endif %}

    {% if current_page < total_pages %}
    <li>
        <a href="#" class="paginator-btn-next" data-js-function="{{ js_function }}" data-page="{{ total_pages }}">&gt;&gt;</a>
    </li>
    {% else %}
    <li class="disabled">
        <span>&gt;&gt;</span>
    </li>
    {% endif %}
</ul>
{% endif %}